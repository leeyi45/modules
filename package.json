{
  "private": true,
  "name": "modules",
  "version": "1.0.0",
  "repository": "https://github.com/source-academy/modules.git",
  "license": "Apache-2.0",
  "scripts-info": {
    "//NOTE": "Run `npm i npm-scripts-info -g` to install once globally, then run `npm-scripts-info` as needed to list these descriptions",
    "create": "Interactively initialise a new bundle or tab from their templates",
    "docs": "Build only documentation",
    "lint": "Check code for eslint warnings and errors",
    "lint:src": "Lint bundle and tab code",
    "lint:scripts": "Lint build script code",
    "build": "Lint code, then build modules and documentation",
    "build:help": "Show help for the build scripts",
    "build:scripts": "Compile build scripts",
    "serve": "Start the HTTP server to serve all files in `build/`, with the same directory structure",
    "scripts": "Run a script within the scripts directory",
    "dev": "Serve modules, rebuilding every time one is requested",
    "dev:watch": "Rebuild modules every time source files change. Need to use with yarn serve",
    "dev:live": "Serve modules, rebuilding on each request or file system change",
    "prepare": "Enable git hooks",
    "test": "Run unit tests",
    "test:watch": "Watch files for changes and rerun tests related to changed files"
  },
  "type": "module",
  "scripts": {
    "create": "yarn scripts create",
    "docs": "yarn scripts build docs",
    "lint": " yarn lint:src && yarn lint:scripts",
    "lint:src": "./node_modules/.bin/eslint -c src/.eslintrc.cjs --ext \".ts, .tsx\" src/",
    "lint:scripts": "./node_modules/.bin/eslint -c scripts/src/.eslintrc.cjs --ext \".ts, .tsx\" scripts/src",
    "build": "yarn lint:src && tsc --project src/tsconfig.json && yarn scripts build",
    "build:help": "yarn scripts build --help",
    "build:scripts": "yarn lint:scripts && tsc --project scripts/src/tsconfig.json && copyfiles -f \"scripts/src/templates/templates/*\" scripts/bin/templates/templates",
    "serve": "http-server --cors=* -c-1 -p 8022 ./build",
    "dev": "yarn scripts dev",
    "dev:watch": "yarn scripts dev --watch",
    "dev:live": "yarn scripts dev -ws",
    "scripts": "node --no-warnings --max-old-space-size=8192 scripts/bin/index.js",
    "prepare": "husky install",
    "test": "jest --verbose",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/dom-mediacapture-record": "^1.0.11",
